@{
    ViewData["Title"] = "Home Page";
}

<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TP06_Qatar</title>
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
</head>

<body>
    @{
        foreach (Equipo eq in @ViewBag.ListaEquipos)
        {
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src=@eq.Escudo alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@eq.Nombre</h5>
                    <a href='@Url.Action("VerDetalleEquipo", "Home", new {IdEquipo = @eq.IdEquipo})' class="btn btn-primary">Ver Detalle Equipo</a>
                </div>
            </div>
        }
    }
</body>

</html>